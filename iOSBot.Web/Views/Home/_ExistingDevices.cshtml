@model List<DeviceViewModel>

<div class="row">
    <div class="">
        <div class="list-group p-2" id="deviceList" role="tablist">
            @foreach (var d in Model)
            {
                var idList = $"list-{d.AudienceId}-list";
                var idContent = $"list-{d.AudienceId}";
                <div class="list-group-item list-group-item-action pb-0" id=@idList data-bs-table="list" href="#" role="tab" aria-controls=@idContent>
                    <div class="row">
                        <div class="col-9 devicelistbutton" data-devid="@d.AudienceId">
                            <p class="lh-lg">@d.FriendlyName</p>
                        </div>
                        <div class="lh-lg col-3 text-end">
                            <button type="button" class="btn btn-outline-danger devicedeletebutton" data-devid="@d.AudienceId" data-devname="@d.FriendlyName">Delete</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>